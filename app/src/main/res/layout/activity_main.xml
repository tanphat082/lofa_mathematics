<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    <TextView android:id="@+id/fx"
        android:background="@drawable/edittext1"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:textSize="30sp"
        android:singleLine="true"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="7"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <Button android:id="@+id/btn_1"
            android:text="1"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"
            />

        <Button android:id="@+id/btn_2"
            android:text="2"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_3"
            android:text="3"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_plus"
            android:text="+"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_minus"
            android:text="-"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_exponential"
            android:text="^"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_exp"
            android:text="exp"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_4"
            android:text="4"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_5"
            android:text="5"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_6"
            android:text="6"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_time"
            android:text="*"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_devide"
            android:text="/"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_cos"
            android:text="cos"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_ln"
            android:text="ln"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_7"
            android:text="7"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_8"
            android:text="8"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_9"
            android:text="9"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_x"
            android:text="x"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_del"
            android:text="DEL"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_sin"
            android:text="sin"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_log"
            android:text="log"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_signed"
            android:text="+/-"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_0"
            android:text="0"
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>
            <!--android:onClick="onClickBtn0"/>-->

        <Button android:id="@+id/btn_dot"
            android:text="."
            android:background="@drawable/button1"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_lbracket"
            android:text="("
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_rbracket"
            android:text=")"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_tan"
            android:text="tan"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_pi"
            android:text="pi"
            android:background="@drawable/button2"
            android:layout_width="@dimen/button_size1"
            android:layout_height="@dimen/button_size1"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_value"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:text="VALUES"
            android:background="#E69A10"
            android:layout_margin="2dp"/>

        <Button android:id="@+id/btn_plot"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:layout_column="5"
            android:text="PLOT"
            android:background="#E69A10"
            android:layout_margin="2dp"/>
    </GridLayout>
</RelativeLayout>